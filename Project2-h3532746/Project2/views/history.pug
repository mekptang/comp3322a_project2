	body(style='margin-top: 60px')
		nav.navbar.navbar-default.navbar-fixed-top
			.container-fluid
				.navbar-header
					button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
						span.sr-only Toggle navigation
						span.icon-bar
						span.icon-bar
						span.icon-bar
					a.navbar-brand(href='main.html') UB Cinema
				#bs-example-navbar-collapse-1.collapse.navbar-collapse
					ul.nav.navbar-nav
						li
							a(href='buywelcome') Buy A Ticket
						li
							a(href='comment')
								| Movie Review
								span.sr-only (current)
						li.active
							a(href='history') Purchase History
					ul.nav.navbar-nav.navbar-right
						li
							a(href='logout') Logout
		.center
			h1 Purchase History
			h3="Username: "+user
			each ticket, i in tickets
				p="TicketId: "+ticket.ticketid+" $"+ticket.ticketfee+"("+ticket.tickettype+")"
				each broadcast in broadcasts
					if ticket.broadcastid == broadcast.broadcastid
						p="House: "+broadcast.houseid
						p="Seat: "+ticket.seatno
						each film in films
							if broadcast.filmid == film.filmid
								p="FilmName: "+film.filmname
								p="Language: "+film.language
								p="Date: "+broadcast.date+"("+broadcast.day+") "+broadcast.time
								hr