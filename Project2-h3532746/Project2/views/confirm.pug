		link(rel='stylesheet', type='text/css', href='/stylesheets/style.css')
		script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js')
		script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js', integrity='sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa', crossorigin='anonymous')
	body(style='margin-top: 60px')
		nav.navbar.navbar-default.navbar-fixed-top
			.container-fluid
				.navbar-header
					button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
						span.sr-only Toggle navigation
						span.icon-bar
						span.icon-bar
						span.icon-bar
					a.navbar-brand(href='main.html') UB Cinema
				#bs-example-navbar-collapse-1.collapse.navbar-collapse
					ul.nav.navbar-nav
						li
							a(href='buywelcome') Buy A Ticket
						li
							a(href='comment')
								| Movie Review
								span.sr-only (current)
						li.active
							a(href='history') Purchase History
					ul.nav.navbar-nav.navbar-right
						li
							a(href='logout') Logout
		.con
			.bx
				.formWrapper_seatplantry
					h1 Order information
					-var sum = 0
					-for(var x = 0; x < item*2; x=x+2)
						-var seatno = price[x]
						-var fee = price[x+1]
						table#ticketinfo
							tbody
								tr
									td Cinema:
									td UB
								tr
									td House:
									td="House"+broadcast.houseid
								tr
									td SeatNo:
									td=seatno
								tr
									td Film:
									td=film.filmname
								tr
									td Category:
									td=film.category
								tr
									td Show Time:
									td=broadcast.date+" ("+broadcast.day+") "+broadcast.time
								tr
									td Ticket Fee:
									td=fee
						br
						if fee == 'Adult($75)'
							-var type = 'Adult'
							-fee = 75
						if fee == 'Student/Senior($50)'
							-var type = 'Student/Senior'
							-fee = 50
						-sum = sum + fee

					span#totalfee="Total fee: $"+sum
					hr
					|             Please present valid proof of age/status when purchasing Student or Senior tickets before entering the cinema house.
					br
					.submittButtonWrapper
						input#submit_sp.btn.btn-primary(type='button', value='OK', onclick="location.href='buywelcome'")