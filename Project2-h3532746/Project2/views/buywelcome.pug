doctype html
html
	head
		meta(charset='utf-8')
		title buywelcome
		script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js')
		meta(name='viewport', content='width=device-width, initial-scale=1.0')
		link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css', integrity='sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u', crossorigin='anonymous')
		link(rel='stylesheet', type='text/css', href='/stylesheets/style.css')
		script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js')
		script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js', integrity='sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa', crossorigin='anonymous')
	body(style='margin-top: 60px;')
		nav.navbar.navbar-default.navbar-fixed-top
			.container-fluid
				.navbar-header
					button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
						span.sr-only Toggle navigation
						span.icon-bar
						span.icon-bar
						span.icon-bar
					a.navbar-brand(href='main.html') UB Cinema
				#bs-example-navbar-collapse-1.collapse.navbar-collapse
					ul.nav.navbar-nav
						li.active
							a(href='buywelcome') Buy A Ticket
						li
							a(href='comment')
								| Movie Review
								span.sr-only (current)
						li
							a(href='history') Purchase History
					ul.nav.navbar-nav.navbar-right
						li
							a(href='logout') Logout
		.container
			each film, i in films
				.box
					.h1f
						h1=film.filmname
					.pic
						div(id="poster_"+film.filmid)
					.details 
						h3="Synopsis (Description): "+film.description
						h4="Director: "+film.director
						h4="Duration: "+film.duration
						h4="Category: "+film.category
						h4="Language: "+film.language
						form(method='get', action='/seatplantry')
							select.form-control(name='broadcast')
								each bc, i in broadcasts
									if (bc.filmid == film.filmid)
										option(value=bc.broadcastid)=bc.date+' '+bc.time+' ('+bc.day+') House '+bc.houseid
							br
							.submittButtonWrapper.redir
								button.btn.btn-sm.btn-primary(style='margin-left:5px;', type='submit') Submit
				hr
		script.
			$("#poster_1").prepend('<img class="poster" src="images/movie001.jpg">');
			$("#poster_2").prepend('<img class="poster" src="images/movie002.jpg">');
			$("#poster_3").prepend('<img class="poster" src="images/P3.png">');
			$("#poster_4").prepend('<img class="poster" src="images/movie004.jpg">');
